<%- include('partials/header'); %>
</head>

<body>

  <%- include('partials/navbar'); %>

  <div id="hero" class="hero">

    <div class="hero__content">

      <h1 class="hero__header"><i class="fas fa-globe-americas"></i>&nbsp;Travel Guides</h1>

    </div>

  </div>

  <div class="container">

    <section class="destinations">

        <% allRegions.forEach(region => { %>
    
          <div class="region-card">
    
            <div class="region-card__header">
              <h1 class="region-card__heading"><%= region.name %></h1>
            </div>
    
            <div class="region-card__destinations">
              <% region.countries.forEach((country, index) => { %>

                <div class="destination-card destination-card--<%= index %>">
                  <div class="destination-card__head">
                    <a class="destination-card__link" href="/destinations/<%= country._id %>"><%= country.name %></a>
                    <img src="https://source.unsplash.com/random/500x400/?travel" alt="" class="destination-card__img">
                  </div>

                  <div class="destination-card__cities">
                    <ul class="destination-card__cities--list">
                      <% country.cities.forEach(city => { %>
                        <li class="destination-card__cities--city">&raquo;&nbsp;<%= city.name %></li>
                      <% }); %>
                    </ul>
                  </div>

                  <div class="destination-card__actions">
                    <ul class="destination-card__actions--list">
                      <li><i class="fab fa-youtube"></i></li>
                      <li><i class="fas fa-share-alt"></i></li>
                      <li><i class="far fa-heart"></i></li>
                    </ul>
                  </div>

                  <div class="destination-card__stars">
                    <% for(i = 0; i < 5; i++) { %>
                      <i class="fas fa-star"></i>
                    <% } %>
                  </div>
                </div>

              <% }); %>
            </div>

            <div class="region-card__footer">
              <p>Stars</p>
              <p>Airlines</p>
            </div>
    
          </div>
    
        <% }); %>
        </section>

  </div>

<%- include('partials/footer'); %>
