<%- include('../partials/header'); %>
</head>

<body>

  <%- include('../partials/navbar'); %>

  <div class="container">

    <h1>Login</h1>
    <% if(errorMessage) { %>
      <h2 class="flash__message flash__message--error"><%= errorMessage %></h2>
    <% } %>

    <form action="/signup" method="POST">
      <label for="email">E-mail</label>
      <input type="email" name="email"><br>
      <label for="password[pass1]">Password</label>
      <input type="password" name="password[pass1]"><br>
      <label for="password[pass2]">Confirm Password</label>
      <input type="password" name="password[pass2]"><br>
      <input type="hidden" value="<%= csrfToken %>" name="_csrf">
      <button type="submit">Sign Up!</button>
    </form>

  </div>

<%- include('../partials/footer'); %>
