<%- include('../partials/header'); %>
</head>

<body>

  <%- include('../partials/navbar'); %>

  <div class="container container--lg mt-xl">

    <h1 class="underlined underlined--lg">Sign Up</h1>
    <% if(errorMessage) { %>
      <h2 class="flash__message flash__message--error"><%= errorMessage %></h2>
    <% } %>

    <div class="form-container">

      <form action="/signup" method="POST" class="auth-form">

        <div class="input-group">
          <label for="user[email]">E-mail</label>
          <input
              type="email"
              name="user[email]"
              placeholder="Email..."
              value="<%= userInput.email %>"
              required>
          <br>
        </div>

        <div class="input-group">
          <label for="password[pass1]">Password</label>
          <input 
              type="password" 
              name="password[pass1]" 
              placeholder="Password..." 
              required>
          <br>
        </div>

        <div class="input-group">
          <label for="password[pass2]">Repeat</label>
          <input 
              type="password" 
              name="password[pass2]" 
              placeholder="Repeat password..." 
              required>
          <br>
        </div>

        <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        <button type="submit">Sign Up!</button>

      </form>

    </div> <!-- Form container -->
  </div> <!-- Main container -->

<%- include('../partials/footer'); %>
