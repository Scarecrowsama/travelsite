<body>

  <%- include('../partials/navbar'); %>

    <div class="container basicFormWidth mt-lg" id="newAttractionContainer">

      <h1>Add New Attraction to <%= foundCity.name %></h1>

      <form action="/destinations/<%= foundCity.country.id %>/cities/<%= foundCity._id %>/attractions/new" method="POST">
        <div class="form-group">
          <label for="attraction[name]">Name:</label>
          <input class="form-control" type="text" name="attraction[name]" placeholder="Attraction name...">
        </div>
        <div class="form-group">
          <label for="attraction[price]">Price:</label>
          <input class="form-control" type="number" name="attraction[price]" step="0.01" placeholder="Attraction price...">
        </div>
        <div class="form-group">
          <label for="location[latitude]">Latitude:</label>
          <input class="form-control" type="text" name="location[latitude]" placeholder="Location Latitude...">
          <label for="location[longitude]">Longitude:</label>
          <input class="form-control" type="text" name="location[longitude]" placeholder="Location Longitude...">
          <label for="location[address]">Address:</label>
          <input class="form-control" type="text" name="location[address]" placeholder="Location address...">
        </div>
        <div class="form-group">
          <label for="attraction[description]">Description:</label>
          <textarea name="attraction[description]" cols="30" rows="10"></textarea>
          <input type="hidden" name=city[id] value="<%= foundCity._id %>">
          <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        </div>
        <button class="btn btn-primary btn-block" type="submit">Add</button>
      </form>

    </div>

<% include ../partials/footer %>
