<body>

  <%- include('../partials/navbar'); %>

  <div class="container">
    <h1>Choose a Destination</h1>

    <h3>All Destinations</h3>
    <div class="row">
      <div class="card-group">
        <% allDestinations.forEach((destination, index) => { %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card mb-4">
              <a href="destinations/<%= destination._id %>">
                <img class="card-img-top" src="https://source.unsplash.com/random/500x500?sig=<%= index %>&travel" alt="<%= destination.name %>">
              </a>
              <div class="card-body">
                <p class="card-title mb-0">
                  <%= destination.region %> | <a href="destinations/<%= destination._id %>"><%= destination.name %></a>
                </p>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </div>
  </div>

