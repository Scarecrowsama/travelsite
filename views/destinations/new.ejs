<% include ../partials/header %>

<%- include('../partials/header'); %>

</head>

<body>

  <%- include('../partials/navbar'); %>

  <div class="container basicFormWidth mt-lg" id="newDestinationContainer">

    <h1 class="display-5">Add New Destination</h1>

    <form action="/destinations" method="post">

      <div class="form-group">
        <label for="destination[name]">Name</label>
        <input class="form-control" type="text" name="destination[name]" placeholder="Destination name...">
      </div>
      <div class="form-group">
        <label for="destination[flag]">Flag</label>
        <input class="form-control" type="text" name="destination[flag]" placeholder="Destination flag...">
      </div>
      <div class="form-group">
        <label for="destination[language]">Language</label>
        <input class="form-control" type="text" name="destination[language]" placeholder="Destination language...">
      </div>
      <div class="form-group">
        <label for="currency[name]">Currency</label>
        <input type="text" name="currency[name]" placeholder="Name, ie. British Pound...">
        <label for="currency[acronym]">Acronym</label>
        <input type="text" name="currency[acronym]" placeholder="Acronym, ie. GBP..." maxlength="3">
      </div>
      <div class="form-group">
        <label for="electrics[voltage]">Voltage</label>
        <input type="number" name="electrics[voltage]" placeholder="Destination voltage...">
        <label for="electrics[frequency]">Frequency</label>
        <input type="number" name="electrics[frequency]" placeholder="Destination frequency...">
        <label for="electrics[plug]">Plug</label>
        <input type="text" name="electrics[plug]" placeholder="Destination plug...">
      </div>
      <div class="form-group">
        <label for="destination[region]">Region</label>
        <select class="form-control mb-4" name="region[name]">
          <option selected disabled hidden>Choose a region</option>
          <% allRegions.forEach(region => { %>
            <option value="<%= region.name %>"><%= region.name %></option>
          <% }); %>
        </select>
      </div>
      <input type="hidden" value="<%= csrfToken %>" name="_csrf">
      <button class="btn btn-primary btn-block" type="submit">Add</button>

    </form>

  </div>

<% include ../partials/footer %>
