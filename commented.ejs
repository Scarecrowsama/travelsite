<% allRegions.forEach(region => { %>
  <div class="regionContainer mb-3 border rounded">
    <div class="text-center regionHeader">
      <p class="regionTitle display-4"><%= region.name %></p>
      <img class="regionImage" src="images/regions/<%= region.image %>.jpg">
    </div>
    <div class="regionDestinations row">
      <% region.cities.forEach(city => { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <a class="btn btn-primary btn-block mb-1" href="/destinations/<%= city._id %>"><%= city.name %></a>
        </div>
      <% }); %>
    </div>
  </div>
<% }); %>

